<Window x:Class="CrudMarioKart.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrudMarioKart"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <StackPanel>
        <DockPanel>
            <TextBlock Width="120" Text="ID:"/>
            <TextBox x:Name="tbPlayerID"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Width="120" Text="naam:"/>
            <TextBox x:Name="tbName"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Width="120" Text="coach:"/>
            <TextBox x:Name="tbColor"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Width="120" Text="stadion:"/>
            <TextBox x:Name="tbAttack"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Width="120" Text="opgericht:"/>
            <TextBox x:Name="tbCarID"/>
        </DockPanel>
        <Button Content="Wijzig" Click="Update_Click"/>
    </StackPanel>
</Window>
